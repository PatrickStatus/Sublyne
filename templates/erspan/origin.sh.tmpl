#!/usr/bin/env bash
set -euo pipefail

ip link add "{{ interface }}" type erspan erspan_ver 2 local "{{ ip_origin }}" remote "{{ ip_dest }}" ttl 255 key "{{ key }}"
ip addr add "{{ origin_private_ip }}" dev "{{ interface }}"
ip link set dev "{{ interface }}" mtu 1464
ip link set dev "{{ interface }}" up
