#!/usr/bin/env bash
set -euo pipefail

ip link add "{{ interface }}" type geneve id "{{ key }}" local "{{ ip_origin }}" remote "{{ ip_dest }}"
ip addr add "{{ origin_private_ip }}" dev "{{ interface }}"
ip link set dev "{{ interface }}" mtu 1464
ip link set dev "{{ interface }}" up
ping -c 4 "{{ dest_private_ip }}"
