#!/usr/bin/env bash
set -euo pipefail

ip tunnel add "{{ interface }}" mode gre local "{{ ip_origin }}" remote "{{ ip_dest }}" ttl 255 key "{{ key }}"
ip addr add "{{ origin_private_ip }}" dev "{{ interface }}"
ip link set dev "{{ interface }}" mtu 1472
ip link set dev "{{ interface }}" up
ping -c 4 "{{ dest_private_ip }}"
